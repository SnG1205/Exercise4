<script>
	$(document).ready(function () {
		var feedUrl = "http://www.businessinsider.com/ws/customfeed?id=5a59205e3b24eab57c1940ca&" + Math.floor(Math.random() * 10);

		$.ajax({
			url: '/Ajax/GetIntegrationData',
			type: "post",
			data: {
				url: feedUrl

			}
		})
			.done(function (resp) {

				if (resp == null || resp === "") {
					return;
				}

				var parse = new DOMParser();
				var xmlDoc = parse.parseFromString(resp, "text/html");
				var xml2json = new X2JS();
				var jsonResult = xml2json.xml2json(xmlDoc);

				if (jsonResult == null
					|| jsonResult.html == null
					|| jsonResult.html.body == null
					|| jsonResult.html.body.rss == null
					|| jsonResult.html.body.rss.channel == null
					|| jsonResult.html.body.rss.channel["atom:link"].item == null
					|| jsonResult.html.body.rss.channel["atom:link"].item.length === 0) {
					return;
				}

				var feedItem = getRecentFeedItem(jsonResult.html.body.rss.channel["atom:link"].item);
				if (feedItem == null
					|| feedItem.title == null
					|| feedItem.title === ""
					|| feedItem.guid == null
					|| feedItem.guid === "") {
					return;
				}

				$("#subscribe_now_container a").html(feedItem.title + " »");
				$("#subscribe_now_container a").attr("href", feedItem.guid + "&amp;r=mi-seealso");
				$("#subscribe_now_container").toggleClass("hide");

			});
	});

	function getRecentFeedItem(items) {
		if (!items) {
			return null;
		}

		if (items.length === 1) {
			return items[0];
		}

		var result = null;
		for (var i = 0; i < items.length; i++) {
			if (result == null) {
				result = items[i];
				continue;
			}

			if (Date.parse(result.pubDate) < Date.parse(items[i].pubDate)) {
				result = items[i];
			}
		}

		return result;
	}
</script>

